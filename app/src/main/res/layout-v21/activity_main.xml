<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="false"
    android:background="#3F51B5">

    <TextView
        android:text="@string/text_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textColor="#C5CAE9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_SpotifyStreamer"
        android:id="@+id/button"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:onClick="sendMessage"
        android:background="#303F9F"
        android:textColor="#C5CAE9"
        android:clickable="true"
        android:elevation="1dp"
        android:translationZ="1dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_ScoresApp"
        android:id="@+id/button2"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:onClick="sendMessage"
        android:background="#303F9F"
        android:textColor="#C5CAE9"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_LibraryApp"
        android:id="@+id/button3"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:onClick="sendMessage"
        android:background="#303F9F"
        android:textColor="#C5CAE9"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_BuildItBigger"
        android:id="@+id/button4"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/button3"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:onClick="sendMessage"
        android:background="#303F9F"
        android:textColor="#C5CAE9"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_XYZReader"
        android:id="@+id/button5"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/button4"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:onClick="sendMessage"
        android:background="#303F9F"
        android:textColor="#C5CAE9"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_CapstoneMyOwnApp"
        android:id="@+id/button6"
        android:onClick="sendMessage"
        android:background="#F50057"
        android:layout_below="@+id/button5"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textColor="#C5CAE9" />

</RelativeLayout>
